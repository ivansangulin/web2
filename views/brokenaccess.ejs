<!DOCTYPE html>
<html>
    <head>
        <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi"
      crossorigin="anonymous"
    />
    </head>
    <body>
        <header>
            <nav class="navbar navbar-expand-lg navbar-light bg-white fixed-top border-bottom">
              <div class="container-fluid">
                <div id="navbarExample01">
                  <div class="d-flex flex-row navbar-nav me-auto mb-2 mb-lg-0">
                    <div class="nav-item active p-2">
                      <a class="nav-link" aria-current="page" href="/">Home</a>
                    </div>
                    <div class="nav-item p-2">
                        <a class="nav-link" href="/login/logout">Logout</a>
                    </div>
                    <div class="nav-item p-2">
                        <a class="nav-link" href="/searchname">Search user</a>
                    </div>
                    <div class="nav-item p-2">
                        <a class="nav-link" href="/brokenaccess">Broken access</a>
                    </div>
                    <% if(locals.admin) { %>
                        <div class="nav-item p-2">
                            <a class="nav-link" href="/admin">Admin only</a>
                        </div>
                    <% } %>
                  </div>
                </div>
              </div>
            </nav>       
          </header>
          <form class="mx-auto border p-2 rounded" style="width:500px;margin-top:200px" method="POST" action="/brokenaccess">
            <div class="form-outline mb-2">
                <input class="form-check-input" type="checkbox" value="true" id="brokenaccesscheck" name="brokenaccess">
                <label class="form-check-label" for="brokenaccesscheck">
                    Enable broken acccess
                </label>
            </div>
            <input type="submit" class="btn btn-primary btn-block mb-4" value="Go to admin page!"></input>
          </form>
          <% if(locals.notallowed) { %>
            <div class="mx-auto border p-2 rounded text-danger text-center" style="width:500px;margin-top:100px">
                You can't access admin page if you are not admin! 
            </div>
          <% } %>
    </body>
</html>